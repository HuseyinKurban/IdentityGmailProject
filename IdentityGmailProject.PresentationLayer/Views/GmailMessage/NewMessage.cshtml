@model Message
@{
    ViewData["Title"] = "NewMessage";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content-body">
    <div class="container-fluid">

        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="email-left-box px-0 mb-5">
                            <div class="p-0">
                                <a href="/GmailMessage/Inbox" class="btn btn-primary btn-block">Gelen Kutusuna Dön</a>
                            </div>
                            @await Component.InvokeAsync("_GmailMessageList")
                            @await Component.InvokeAsync("_GmailMessageCategories")
                        </div>
                        <div class="email-right-box ml-0 ml-sm-4 ml-sm-0">
                            <div class="toolbar mb-4" role="toolbar">
                                <div class="btn-group mb-1">
                                    <button type="button" class="btn btn-dark">
                                        <i class="fa fa-archive"></i>
                                    </button>
                                    <button type="button" class="btn btn-dark">
                                        <i class="fa fa-exclamation-circle"></i>
                                    </button>
                                    <button type="button" class="btn btn-dark">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </div>


                                <div class="btn-group mb-1">
                                    <button type="button" class="btn btn-dark dropdown-toggle" data-toggle="dropdown">
                                        Daha Fazlası <span class="caret m-l-5"></span>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="javascript: void(0);">Okunmadı Olarak İşaretle</a> <a class="dropdown-item" href="javascript: void(0);">Taslaklara Kaydet</a>
                                        <a class="dropdown-item" href="javascript: void(0);">Yıldız Ekle</a> <a class="dropdown-item" href="javascript: void(0);">Önemsizlere Al</a>
                                    </div>
                                </div>
                            </div>
                            <form method="post" asp-action="NewMessage">

                                <div class="compose-content">
                                    <div class="form-group">
                                        @Html.DropDownListFor(x => x.ReceiverId, (List<SelectListItem>)ViewBag.v2, "Bir alıcı seçin", new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v1, "Bir kategori seçin", new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <input type="text" asp-for="Title" class="form-control bg-transparent" placeholder=" Konu:">
                                    </div>
                                    <div class="form-group">
                                        <textarea id="email-compose-editor" class="textarea_editor form-control bg-transparent" rows="15" asp-for="MessageContent" placeholder="Mesajınız ..."></textarea>
                                    </div>

                                    <h5 class="mb-4"><i class="fa fa-paperclip"></i> Attachment</h5>
                                    <div class="fallback w-100">
                                        <input type="file" class="dropify" data-default-file="" />
                                    </div>
                                </div>

                                <div class="text-left mt-4 mb-5">
                                    <button class="btn btn-primary btn-sl-sm mr-3" type="submit">
                                        <span class="mr-2"><i class="fa fa-paper-plane"></i></span> Gönder
                                    </button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
