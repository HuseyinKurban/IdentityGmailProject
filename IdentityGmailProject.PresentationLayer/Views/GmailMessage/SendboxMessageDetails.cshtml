@model Message
@{
    ViewData["Title"] = "SendboxMessageDetails";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="email-left-box px-0 mb-5">
                            <div class="p-0">
                                <a href="/GmailMessage/NewMessage" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                            </div>
                            @await Component.InvokeAsync("_GmailMessageList")
                            @await Component.InvokeAsync("_GmailMessageCategories")


                        </div>
                        <div class="email-right-box ml-0 ml-sm-4 ml-sm-0">
                            <div class="row">
                                <div class="col-12">
                                    <div class="right-box-padding">
                                        <div class="toolbar" role="toolbar">
                                            <div class="btn-group mb-4">
                                                <button type="button" class="btn btn-dark">
                                                    <i class="fa fa-archive"></i>
                                                </button>
                                                <button type="button" class="btn btn-dark">
                                                    <i class="fa fa-exclamation-circle"></i>
                                                </button>
                                                <button type="button" class="btn btn-dark">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </div>


                                            <div class="btn-group mb-4">
                                                <button type="button" class="btn btn-dark dropdown-toggle" data-toggle="dropdown">
                                                    Daha Fazlası <span class="caret m-l-5"></span>
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" href="javascript: void(0);">
                                                        Okunmadı Olarak İşaretle
                                                    </a>
                                                    <a class="dropdown-item" href="javascript: void(0);">
                                                        Taslaklara Kaydet
                                                    </a>
                                                    <a class="dropdown-item" href="javascript: void(0);">
                                                        Yıldız Ekle
                                                    </a>
                                                    <a class="dropdown-item" href="javascript: void(0);">Önemsizlere Al</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="read-content">
                                            <div class="media pt-3">
                                                <img class="mr-4 rounded-circle" width="64" height="64" alt="image" src="@Model.Receiver.ProfilImageUrl">
                                                <div class="media-body">
                                                    <h5 class="text-primary">@Model.Receiver.Name @Model.Receiver.Surname</h5>
                                                    <p class="read-content-email">
                                                        Alıcı:@Model.Receiver.Email
                                                    </p>
                                                    <p class="mb-0">@Model.MessageDate.ToString("dd-MMM-yyyy")</p>
                                                </div>
                                                <a href="javascript:void()" class="text-muted ">
                                                    <i class="fa fa-reply"></i>
                                                </a>
                                                <a href="javascript:void()" class="text-muted ml-3">
                                                    <i class="fa fa-long-arrow-right"></i>
                                                </a>
                                                <a href="javascript:void()" class="text-muted ml-3">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </div>
                                            <hr>
                                            <div class="media mb-4 mt-5">
                                                <div class="media-body">
                                                    <span class="pull-right">@Model.MessageDate.ToString("HH-mm")</span>
                                                    <h5 class="my-1 text-primary">@Model.Title</h5>

                                                </div>
                                            </div>
                                            <div class="read-content-body">

                                                <p>@Model.MessageContent</p>

                                                <hr>
                                            </div>


                                        </div>
                                        <div class="text-right">
                                            <a href="/GmailMessage/NewMessage" class="btn btn-primary btn-sl-sm mb-5" type="button">Tekrar Mesaj Gönder</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

