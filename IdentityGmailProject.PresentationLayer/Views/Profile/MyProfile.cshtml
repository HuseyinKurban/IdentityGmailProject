@model AppUserEdit
@{
    ViewData["Title"] = "MyProfile";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Merhaba, Hoşgeldin @Model.Name</h4>
                    <p class="mb-0">Burası Senin Profil Kontrol Panelin</p>
                </div>
            </div>
          
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="profile">
                    <div class="profile-head">
                        <div class="photo-content">
                            <div class="cover-photo" style="background-image: url('@Model.CoverImageUrl')"></div>

                            <div class="profile-photo">
                                <img src="@Model.ProfilImageUrl" class="img-fluid rounded-circle" alt="">
                            </div>
                        </div>
                        <div class="profile-info">
                            <div class="row justify-content-center">
                                <div class="col-xl-8">
                                    <div class="row">
                                        <div class="col-xl-4 col-sm-4 border-right-1 prf-col">
                                            <div class="profile-name">
                                                <h4 class="text-primary">@Model.Name @Model.Surname</h4>
                                                <p>@Model.Job</p>
                                            </div>
                                        </div>
                                        <div class="col-xl-4 col-sm-4 border-right-1 prf-col">
                                            <div class="profile-email">
                                                <h4 class="text-muted">@Model.Email</h4>
                                                <p>Email</p>
                                            </div>
                                        </div>
                                        <!-- <div class="col-xl-4 col-sm-4 prf-col">
                                            <div class="profile-call">
                                                <h4 class="text-muted">(+1) 321-837-1030</h4>
                                                <p>Phone No.</p>
                                            </div>
                                        </div> -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class="profile-statistics">
                            <div class="text-center mt-4 border-bottom-1 pb-3">
                                <div class="row">
                                    <div class="col">
                                        <h3 class="m-b-0">@ViewBag.toplam</h3><span>Toplam Mesaj</span>
                                    </div>
                                    <div class="col">
                                        <h3 class="m-b-0">@ViewBag.gelen</h3><span>Gelen Mesajlar</span>
                                    </div>
                                    <div class="col">
                                        <h3 class="m-b-0">@ViewBag.gonderilen</h3><span>Gönderilen Mesajlar</span>
                                    </div>
                                </div>
                                <div class="mt-4">
                                    <a href="javascript:void()" class="btn btn-primary pl-5 pr-5 mr-3 mb-4">Gelen Kutusu</a> <a href="javascript:void()" class="btn btn-dark pl-5 pr-5 mb-4">
                                        Mesaj Gönder
                                    </a>
                                </div>
                            </div>
                        </div>
                
                      
              
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <div class="profile-tab">
                            <div class="custom-tab-1">
                                <ul class="nav nav-tabs">
                                 
                                    <li class="nav-item">
                                        <a href="#about-me" data-toggle="tab" class="nav-link">Hakkımda</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#profile-settings" data-toggle="tab" class="nav-link">Profil Düzenleme</a>
                                    </li>
                                </ul>
                                <div class="tab-content">
                                    <div id="about-me" class="tab-pane fade active show">
                                        <div class="profile-about-me">
                                            <div class="pt-4 border-bottom-1 pb-4">
                                                <h4 class="text-primary">Hakkımda</h4>
                                                <p>@Model.Detail</p>
                                          
                                            </div>
                                        </div>
                    
                                    
                                    </div>
                                    <div id="profile-settings" class="tab-pane fade">
                                        <div class="pt-3">
                                            <div class="settings-form">
                                                <h4 class="text-primary">Profil Düzenleme İşlemleri</h4>
                                                <form method="post">
                                                    <div class="form-row">
                                                        <div class="form-group col-md-6">
                                                            <label>Adınız</label>
                                                            <input type="text" placeholder="Adınız" asp-for="Name" class="form-control">
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <label>Soyadınız</label>
                                                            <input type="text" placeholder="Soyadınız" asp-for="Surname" class="form-control">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Profil Resmi</label>
                                                        <input type="text" placeholder="Profil Resminiz" asp-for="ProfilImageUrl" class="form-control">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Kapak Resmi</label>
                                                        <input type="text" placeholder="Kapak Resmi" asp-for="CoverImageUrl" class="form-control">
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="form-group col-md-5">
                                                            <label>Email Adresiniz</label>
                                                            <input type="email" class="form-control" asp-for="Email" placeholder="Email Adresiniz">
                                                        </div>
                                                        <div class="form-group col-md-4">
                                                            <label>Kullanıcı Adı</label>
                                                            <input type="text" class="form-control" asp-for="UserName" placeholder="Kullanıcı Adı">
                                                        </div>
                                                        <div class="form-group col-md-3">
                                                            <label>Ünvan - İş</label>
                                                            <input type="text" class="form-control" asp-for="Job" placeholder="Ünvan - İş">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Hakkımda</label>
                                                        <textarea rows="5" placeholder="Hakkımda" asp-for="Detail" class="form-control"></textarea>

                                                    </div>
                                                    <div class="form-group">
                                                        <label>Şifreniz</label>
                                                        <input type="password" class="form-control" asp-for="Password" placeholder="Şifreniz" required>

                                                    </div>
                                                    <button class="btn btn-warning" type="submit">
                                                       Güncelle
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
